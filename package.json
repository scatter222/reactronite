{
  "name": "installation-wizard",
  "productName": "Installation Wizard",
  "version": "1.0.0",
  "description": "A modern installation wizard application built with Electron and React",
  "main": ".vite/build/main.js",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "type": "module",
  "keywords": [
    "electron",
    "react",
    "typescript",
    "boilerplate",
    "electron-forge",
    "vite"
  ],
  "author": {
    "name": "Flavio Del Grosso"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/flaviodelgrosso/reactronite.git"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "clean": "rimraf node_modules .vite pnpm-lock.yaml",
    "postinstall": "husky",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "release": "standard-version",
    "major": "npm run release -- --release-as major",
    "minor": "npm run release -- --release-as minor",
    "patch": "npm run release -- --release-as patch",
    "push-release": "git push --follow-tags origin master"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "electron-window-state": "^5.0.3",
    "lucide-react": "^0.536.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.7.1",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@electron-forge/cli": "^7.8.2",
    "@electron-forge/maker-deb": "^7.8.2",
    "@electron-forge/maker-rpm": "^7.8.2",
    "@electron-forge/maker-squirrel": "^7.8.2",
    "@electron-forge/maker-zip": "^7.8.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.2",
    "@electron-forge/plugin-fuses": "^7.8.2",
    "@electron-forge/plugin-vite": "^7.8.2",
    "@electron-forge/shared-types": "^7.8.2",
    "@electron/fuses": "^2.0.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "4.7.0",
    "classnames": "^2.5.1",
    "cross-env": "^10.0.0",
    "electron": "37.2.5",
    "electron-devtools-installer": "^4.0.0",
    "eslint": "^9.32.0",
    "husky": "9.1.7",
    "lint-staged": "^16.1.2",
    "neostandard": "^0.12.2",
    "pinst": "^3.0.0",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.11",
    "ts-node": "10.9.2",
    "typescript": "~5.8.3",
    "vite": "^7.0.6",
    "vite-plugin-checker": "^0.10.2",
    "vite-plugin-svgr": "4.3.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
